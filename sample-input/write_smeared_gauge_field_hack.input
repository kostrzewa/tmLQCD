# example input file for invert
# for CG solver
# requires a 4^4 gauge configuration conf.0000

L=12
T=20

DebugLevel = 5
InitialStoreCounter = 100
Measurements = 10
2kappamu = 0.05
kappa = 0.177
BCAngleT = 1
UseEvenOdd = yes
nsave=1

ompnumthreads=4

SourceType = Point
ReadSource = no
Indices = 0
NoSamples = 1

BeginSmearing STOUT
  rho = 0.2
  iterations = 1
  id = 1
EndSmearing

BeginOperator TMWILSON
  2kappaMu = 0.5
  kappa = 0.177
  UseEvenOdd = yes
  Solver = CG
  SolverPrecision = 1e-14
  MaxSolverIterations = 1
  AddDownPropagator = no
  SmearingId = 1
EndOperator

